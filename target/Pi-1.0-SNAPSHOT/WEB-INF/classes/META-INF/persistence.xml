        <class>com.mycompany.pi.CellphoneProfissional</class>
        <class>com.mycompany.pi.PhoneClients</class>
        <class>com.mycompany.pi.PhoneProfissionals</class>
        <class>com.mycompany.pi.Solicitation</class>
        <class>com.mycompany.pi.AvaliationClient</class>
        <class>com.mycompany.pi.AvaliationProfissional</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pi"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="081707Sl"/>
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>